      <li><%= link_to current_user.username, user_path(current_user.id), :method => :get %></li>
      <li><%= link_to "Open Appointments", "/appointments/open" %></li>
      <li><%= link_to "My Appointments", "/users/#{current_user.id}/appointments" %></li>
      <li><%= link_to "New Appointment", "/appointments/new" %></li>
      <li><%= link_to "Logout", {:controller=> "sessions", :action=> "destroy"}, :method => :delete%></li>
    </ul>
    <% else %>
      <a href="/" class="brand-logo">wewalk</a>
      <ul class="right">
        <li><%= link_to "Login", login_path %></li>
      </ul>
      <% end %>
     </div>
     </nav>

    <div class="container">

    <%= yield %>
    </div>
