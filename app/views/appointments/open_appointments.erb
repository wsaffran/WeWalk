<h3>Open appointments! Walkers Needed.</h1>

<div class ="row">
  <% @open_appointments.each do |appointment| %>
    <div class="col s4">
      <div class="card">
        <div class="card-image">
          <img src="https://i.imgur.com/kgIFYme.jpg">

          <div class="card-content">
          <li>Appointment Number: <%= appointment.id %></li>
          <li>Dog: <%= link_to appointment.dog.name, "/dogs/#{appointment.dog.id}" %></li>
          <li>Dog's Owner: <%= link_to appointment.dog.user.first_name, "/users/#{appointment.dog.user.id}" %></li>
          <li>Appointment Date: <%= appointment.appointment_date %></li>
          <li>Appointment Time: <%= appointment.appointment_time %></li>
          <li>Walk Duration: <%=appointment.walk_duration %></li><br>
          <div class="center">
          <%= button_to 'Walk This Dog', {:controller => "appointments", :action => "status_to_scheduled", :id => appointment.id }, {:method=>:patch} %><br>
          </div>
        </div>
      </div>
    </div>
    </div>
  <% end %>
</div>
