<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :address %>
  <%= f.text_field :address %><br>

  <%= f.label :city %>
  <%= f.text_field :city %><br>

  <%= f.label :state %>
  <%= f.text_field :state %><br>

  <%= f.label :dob %>
  <%= f.date_select(:dob, :order => [:month, :day, :year]) %><br>

  <%= f.submit %>

<% end %>

<%= button_to "Back", "/users/#{@user.id}", {method: :get} %>
