<h1> All my appointments!</h1>


<div class="divider"></div>


  <% @user.dogs.each do |dog| %>
  <div class ="row">
    <%= dog.name %>'s Appointments:<br><br>
      <% dog.appointments.each do |appointment| %>
        <div class="col s4">
          <div class="card">
            <div class="card-image">
              <img src="https://i.imgur.com/kgIFYme.jpg">
              <div class="card-content">
                <li>Appointment Number: <%= appointment.id %></li>
                <li>Dog: <%= link_to appointment.dog.name, '/dogs/#{appointment.dog.id}' %></li>
                <li>Dog's Owner: <%= link_to appointment.dog.user.first_name, "/users/#{appointment.dog.user.id}" %></li>
                <li>Walker:
                  <% if !appointment.walker.nil?   %>
                  <%= link_to appointment.walker.first_name, user_path(appointment) %><% end %></li>
                <li>Appointment Date: <%= appointment.appointment_date %></li>
                <li>Appointment Time: <%= appointment.appointment_time %></li>
                <li>Walk Duration: <%= appointment.walk_duration %></li><br>
                <div class="action btn waves-effect waves-light actions white">
                  <span class= "white-text">
                <%= button_to 'View', appointment_path(appointment.id), {:method=>:get} %></div><br>
              </div>
            </div>
          </div>
        </div>
    <% end %>
    </div>
  <% end %>



  <div class="divider"></div>

