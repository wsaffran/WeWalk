<h1>Create Account</h1>

<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :dob %>
  <%= f.text_field :dob %><br>

  <%= f.label "Street" %>
  <%= f.text_field :address %><br>

  <%= f.label :city %>
  <%= f.text_field :city %><br>

  <%= f.label :state %>
  <%= f.select(:state, us_states, prompt: true) %>

  <%= f.label :zip_code %>
  <%= f.number_field :zip_code %><br></br>

  <%= f.submit 'Create Account'%>

<% end %>

<%= button_to "Back", login_path %>
