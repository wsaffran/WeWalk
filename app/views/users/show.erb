<div class="show_title">
  <h1><%= "#{@user.first_name} " "#{@user.last_name}" %></h1>
</div>


<div class="user_info">
  <ul>
    <h3>User Info</h3>
      <div class="user_address">
        <li>Address: <%= @user.address %> <%= @user.city %>, <%= @user.state %> <%= @user.zip_code %></li>
      </div>
      <div class="user_dob">
        <% if @user.dob != nil %>
        <li>Date of Birth: <%= Date.parse(@user.dob.to_s) %></li>
        <% end %>
      </div>
      <div class="token_balance">
        <li>Token Balance: <%= @user.token_balance %></li>
      </div>
  </ul>
  <div class="dogs">
    <ul>
      <h3>Dogs</h3>
        <% @user.dogs.each do |dog| %>
          <li><%= link_to dog.name, dog_path(dog.id) %></li>
        <% end %>
    </ul>
  </div><br>
</div>

<div class="add_dogs">
  <%= button_to "Add Dog", new_dog_path, {method: :get} %><br>
</div>

<div class="edit_user">
  <%= button_to "Edit", "/users/#{@user.id}/edit", {method: :get}%><br>
</div>

